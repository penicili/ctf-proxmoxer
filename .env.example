# ===== PROXMOX CONFIGURATION =====
PROXMOX_HOST=localhost
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=examplepassword
PROXMOX_NODE=pve
PROXMOX_VERIFY_SSL=false

# ===== SSH CONFIGURATION =====
SSH_USERNAME=root
SSH_PASSWORD=ctfadmin
SSH_PORT=22
SSH_TIMEOUT=30

# ===== APPLICATION CONFIGURATION =====
APP_NAME=CTF Platform
VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1

# ===== DATABASE CONFIGURATION =====
DB_PLATFORM=mysql
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ctf_db
# For PostgreSQL: postgresql://user:password@localhost/ctf_db
# For MySQL: mysql://user:password@localhost/ctf_db

# ===== CHALLENGE DEFAULTS =====
DEFAULT_VM_MEMORY=512
DEFAULT_VM_CORES=1
DEFAULT_VM_STORAGE=10G
DEFAULT_CHALLENGE_DURATION=3600  # seconds (1 hour)
MAX_CONCURRENT_DEPLOYMENTS=10

# ===== FLAG CONFIGURATION =====
FLAG_PREFIX=CTF
FLAG_LENGTH=32
FLAG_CHARSET=ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789

# ===== NETWORK CONFIGURATION =====
STARTING_VMID=200
MAX_VMID=500
PUBLIC_BRIDGE=vmbr0
MANAGEMENT_BRIDGE=vmbr1

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=ctf_platform.log